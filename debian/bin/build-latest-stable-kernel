#!/usr/bin/env bash

repo="$HOME/src/linux-stable"

if [ ! -e "$repo/.git" ]; then
    echo "fatal: kernel git repository not found." >&2
    echo "repo=$repo" >&2
    exit 1
fi

cd "$repo"
git fetch
checkout-latest-stable-version

if [ $? -ne 0 ]; then
    echo "fatal: cannot find latest stable version" >&2
    exit 2
fi

build-kernel -y
